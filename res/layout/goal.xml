<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"  
  	android:weightSum="1" 
  	android:layout_width="fill_parent" 
  	android:orientation="vertical" 
  	android:layout_height="fill_parent"
  	android:background="#99CC01">
  	<RelativeLayout android:layout_height="wrap_content" 
  		android:background="@drawable/medium"
		android:id="@+id/relativeLayout1" 
		android:layout_width="fill_parent">
			<ImageView 
				android:src="@drawable/title_list"
				android:id="@+id/imageView1" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				/>
			<Button 
				android:layout_width="wrap_content"
				android:background="@drawable/actionbar_selector_delete"
				android:layout_height="wrap_content" 
				android:id="@+id/deleteGoal"
				android:layout_alignParentRight="true"
				/>
				</RelativeLayout> 	
  	<LinearLayout 
  		android:orientation="horizontal"
  		android:layout_width = "fill_parent"
  		android:layout_height="150px">
  		<!-- <ImageButton
        	android:id = "@+id/arrow_prev"
        	android:src="@drawable/arrow_prev"
        	android:layout_width="80px"
        	android:layout_height = "150px"
        	android:background="#00000000"/> -->
        <ImageButton
        	android:id = "@+id/arrow_prev"
        	android:src="@drawable/arrow_prev"
        	android:layout_width="wrap_content"
        	android:layout_height = "wrap_content"
        	android:background="#00000000"/>
        <ImageView 
        	android:id = "@+id/detail_lv"
        	android:src="@drawable/details_lv1_a"
        	android:layout_width = "wrap_content"
        	android:layout_height = "wrap_content"
        	android:background="#00000000"/>
        <ImageButton
        	android:id = "@+id/arrow_next"
        	android:src="@drawable/arrow_next"
        	android:layout_width="wrap_content"
        	android:layout_height = "wrap_content"
        	android:background="#00000000"/>
  	</LinearLayout>
   	<!--  <TextView android:id="@+id/textView1" 
    	android:text="TextView" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="0.02" 
    	android:layout_width="270dp"/> -->
    	
    <LinearLayout android:id="@+id/linearLayout3" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="0.02" 
    	android:weightSum="1"
    	android:orientation="vertical" 
    	android:background="#00000000" 
    	android:layout_width="fill_parent">
    	
    	 <TextView android:id ="@+id/detail_goal_name"
    	 	android:background ="@drawable/detail_bg1"
    		android:layout_width = "480px"
    		android:layout_height="219px"
    		android:text="Drink water 2000 c.c." 
    		android:paddingLeft="30dp"    		
    		android:textColor="#666666"
    		android:textSize="18dp" 
    		android:gravity="center_vertical"/>
    	
    	<RelativeLayout 
    		android:layout_height="wrap_content" 
  			android:background="#00000000"
			android:id="@+id/relativeLayout2" 
			android:layout_width="fill_parent">
    		<TextView 
    			android:id="@+id/current_title"
    			android:textSize = "18dp"
    			android:textColor="#FFFFFF"
    			android:text ="目前持續天數："
    			android:paddingLeft="30dp"
    			android:paddingTop ="10dp"
    			android:layout_alignParentLeft="true"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"/>
    		<TextView 
    			android:id ="@+id/detail_goal_current"
    			android:layout_width = "wrap_content"
    			android:layout_toRightOf="@id/current_title"
    			android:text="21" 
    			android:layout_height="wrap_content"
				android:textColor="#ffffffff"
    			android:textSize="30dp"
    			android:paddingRight="75dp"/>
    		<TextView 
    			android:id="@+id/max_title"
    			android:layout_below="@id/current_title"
    			android:textSize = "18dp"
    			android:textColor="#FFFFFF"
    			android:text ="最高紀錄持續："
    			android:paddingLeft="30dp"
    			android:paddingTop ="10dp"
    			android:layout_alignParentLeft="true"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"/>
    		<TextView 
    			android:id ="@+id/detail_goal_max"
    			android:layout_width = "wrap_content"
    			android:layout_toRightOf="@id/max_title"
    			android:layout_below= "@id/detail_goal_current"
    			android:text="21" 
    			android:layout_height="wrap_content"
				android:textColor="#ffffffff"
    			android:textSize="30dp"
    			android:paddingRight="75dp"/>
    		<TextView 
    			android:id="@+id/start_title"
    			android:layout_below="@id/max_title"
    			android:textSize = "18dp"
    			android:textColor="#FFFFFF"
    			android:text ="since："
    			android:paddingLeft="30dp"
    			android:paddingTop ="10dp"
    			android:layout_alignParentLeft="true"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"/>
    		<TextView 
    			android:id ="@+id/detail_goal_start"
    			android:layout_width = "wrap_content"
    			android:layout_toRightOf="@id/max_title"
    			android:layout_below= "@id/detail_goal_max"
    			android:text="2011-11-27" 
    			android:textSize = "18dp"
    			android:layout_height="wrap_content"
				android:textColor="#ffffffff"
    			android:layout_alignParentRight="true"/>	
    		<ImageButton 
    			android:layout_width="wrap_content" 
    			android:id="@+id/button_sos" 
    			android:layout_below="@id/detail_goal_start"
    			android:padding="20dp"
    			android:layout_height="wrap_content" 
    			android:src="@drawable/sos_selector" 
    			android:background="#00000000" android:layout_alignParentRight="true"/>
    	</RelativeLayout>
    	
    		
    </LinearLayout>
 
</LinearLayout>
